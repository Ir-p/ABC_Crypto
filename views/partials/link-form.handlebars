<!-- link page-->
<div class="card">
        <h2 class="fst-italic fw-bold" align="center">
          Resource
        </h2>
        <div class="card-body">
          <form class = "form-resource" role="form" action="/api/links" method="POST">
            <div class="form-group">
              <label for="name" class="fw-bold">Title</label>
              <input type="text" class="form-control" id="name" name="name" value="Demistify cryptocurrency" />
            </div>
          
              <input type="hidden" value="{{user_id}}" name="user_id" class="form-control" id="user_id" />
        
            <div class="form-group">
              <label for="text" class="fw-bold">Text</label>
              <textarea type="text" class="form-control" id="text" name="text" value="Cryptocurrency" rows="5"></textarea>
            </div>
            <div class="form-group">
              <label for="keyword" class="fw-bold">Keyword</label>
              <input
                type="text"
                class="form-control"
                id="keyword" name="keywords" value="crytocurrency"
              />
            </div>
            <div class="form-group">
              <label for="link" class="fw-bold">Link</label>
              <input
                type="text"
                class="form-control"
                id="link" name="link" value="https://partners.wsj.com/ledger/demystify-cryptocurrency/"
              />
            </div>
            <button type="submit" class="btn btn-primary submit">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
