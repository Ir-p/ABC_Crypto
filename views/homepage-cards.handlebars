<!-- homepage-cards the landing page-->
<div class="container-fluid">
  <div class="row">
    <hr>
    <h2 align="center">Mission statement</h2>
    <hr>
    {{#each cards}}
    <div class="col">
      <div class="card m-0">
        <div class="card-header">
          <h5 class="card-title">{{name}}</h5>
        </div>
        <div class="card-body">
          <h6 class="card-body">{{> content}}</h6>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>