<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" 
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" 
    crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/jass.css">
  <title>ABC Crypto</title>
</head>

<body>

  <!-- header with navigation -->
  <header class="mb-3">
    <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container-fluid  justify-content-center">
        <div class="navbar-brand text-white mb-0 h1">ABC Crypto</div>
      </div>
    </nav>
      <div class="container-fluid d-flex flex ps-5 pe-5">
        <a class="nav-link" href="/">Home</a><span class="nav-link">|</span> 

        <!-- render links based on login status -->
        {{#if logged_in}}
            <a class="nav-link" href="/comments">Profile</a><span class="nav-link">|</span>
        {{/if}} 
        <a class="nav-link" href="/about">About</a><span class="nav-link">|</span>
        {{#if logged_in}}
            <a class="nav-link" id="logout">Logout ({{ user_name }})</a>
        {{else}}
            <a class="nav-link" href="/login">Login</a>
        {{/if}} 
      </div>
  </header>

  <!-- main -->
  <main class="mb-3">
    <div class="container-fluid ps-5 pe-5">
      <div class="row">
        <hr>
        <!-- render sublayout -->
        {{{ body }}}
        <p><hr></p>
      </div>
    </div>
  </main>

  <!-- if the user is logged in, render logout script -->
  {{#if logged_in}}
    <script src="/js/logout.js"></script>
  {{/if}}

</body>
</html>