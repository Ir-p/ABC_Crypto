<!-- edit-post -->
<div class="col">
  <div class="card">
    <div class="card-header">
      <div class="fs-3 fw-bold">Edit Post</div>
    </div>

    <div class="card-body">
      <div class="fw-bold">{{link.name}} </div>
      <div><a href="{{link.link}}">{{link.link}}</a></div>
      <div>{{user.first_name}} {{user.last_name}} on {{format_date date_created}}</div>
      <form class="form edit-post-form">
        <div class="form-group mb-3">
          <label for="edit-post-content" class="form-label fw-bold">Content</label>
          <textarea class="form-control" id="edit-post-content" rows="5">{{comment}}</textarea>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="update-post-btn">Update</button>
          <button class="btn btn-primary" type="submit" id="delete-post-btn">Delete</button>
          <button class="btn btn-primary" type="submit" id="cancel-post-btn">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/cancel.js"></script>