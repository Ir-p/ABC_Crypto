<!-- signup handlebar-->
<div class="col">
  <div class="card m-2">
    <div class="card-header">
      <div class="card-title">Sign Up</div>
    </div>
    <div class="card-body">
      <form class="form signup-form">
        <div class="form-group mb-3">
          <label for="firstname" class="form-label">First Name</label>
          <input class="form-control" type="text" id="signup-firstname"></input>
        </div>
        <div class="form-group mb-3">
          <label for="lastname" class="form-label">Last Name</label>
          <input class="form-control" type="text" id="signup-lastname"></input>
        </div>
        <div class="form-group mb-3">
          <label for="username-sign-up" class="form-label">Username</label>
          <input class="form-control" type="text" id="signup-username"></input>
        </div>
        <div class="form-group mb-3">
          <label for="password-sign-up" class="form-label">Password</label>
          <input class="form-control" type="password" id="signup-password" placeholder="8-char-long"></input>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary" type="submit" id="signup-btn">Sign Up</button>
          <a class="btn btn-primary" href="/login"> Back to Login</a>
        </div>
      </form>
      <div>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>